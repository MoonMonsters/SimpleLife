<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/srl_fragment_joke_img"
    android:layout_height="match_parent"
    tools:context="com.chalmers.simplelife.fragment.joke.ImgJokeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <WebView
        android:id="@+id/wv_fragment_joke_img"
        android:layout_width="match_parent"
        android:layout_gravity="center|center_horizontal"
        android:foregroundGravity="center"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_fragment_joke_left"
        android:layout_gravity="left|center_vertical"
        android:layout_width="50dp"
        android:background="@drawable/ic_left"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/iv_fragment_joke_right"
        android:layout_gravity="right|center_vertical"
        android:layout_width="50dp"
        android:background="@drawable/ic_right"
        android:layout_height="50dp" />
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>
